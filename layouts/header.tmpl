{{define "header"}}
<!DOCTYPE html>
<html lang="en">
<head>
        <title>Skylark | {{.Title}}</title>
    	<meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
        <style>
            .list {
                list-style: none;
                margin: 0px 0px;
                margin-bottom: 20px;
                padding: 0;
                width: 100%;
            }
            .list li {
                border: 1px solid rgb(220, 220, 220);
                border-bottom: 0px;
                margin: 0px 0;
            }
            .list li:first-child {
                border-top-left-radius: 4px;
                border-top-right-radius: 4px;
            }
            .list li:last-child {
                border-bottom-left-radius: 4px;
                border-bottom-right-radius: 4px;
                border-bottom: 1px solid rgb(220, 220, 220);
            }
            .list li a {
                color: black;
            }
            .list li a:hover {
                text-decoration: none;
            }
            .item {
                display: block;
                height: 64px;
                position: relative;
                text-overflow: ellipsis;
                vertical-align: baseline;
                white-space: nowrap;
            }
            .item-thumbnail {
                padding-left: 80px;
            }
            .item img {
                height: 64px;
                position: absolute;
                top: 0px;
                left: 0px;
                width: 64px;
            }
            .item h4, .item p {
                overflow: hidden;
                text-overflow: ellipsis;
                white-space: nowrap;
            }
            .item-media-heading {
                padding-top: 20px;
            }
            .item-badge {
                margin-top: 25px;
                margin-right: 25px;
                position: absolute;
                right: 0;
            }
        </style>
    </head>
{{end}}